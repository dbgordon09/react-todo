{
  "name": "react-todo",
  "version": "0.1.0",
  "private": true,
  "author": "Dale Gordon",
  "description": "Sample todo application to help decide between using React or Vue.js as the frontend framework for future personal projects",
  "scripts": {
    "start": "npm-run-all --parallel watch-tailwind:css start:react",
    "build": "npm-run-all build-tailwind:css build:react",
    "build-tailwind:css": "postcss src/assets/css/tailwind.css -o src/css/index.css",
    "watch-tailwind:css": "postcss src/assets/css/tailwind.css -o src/css/index.css -w",
    "start:react": "react-scripts start",
    "build:react": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "./node_modules/.bin/standard",
    "lint-fix": "./node_modules/.bin/standard --fix"
  },
  "eslintConfig": {
    "extends": ["react-app", "standard"]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "standard": "^14.1.0",
    "tailwindcss": "^1.1.2"
  }
}